<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote name="aospify"
          fetch="https://github.com/Aospify"
          revision="Q" />

  <!-- Aospify -->
  <project path="build/make" name="platform_build" remote="aospify" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>

  <!-- Framework repos -->
  <project path="frameworks/base" name="platform_frameworks_base" remote="aospify" />
  <project path="frameworks/native" name="platform_frameworks_native" remote="aospify" />
  <project path="frameworks/opt/net/ims" name="platform_frameworks_opt_net_ims" remote="aospify" />
  <project path="frameworks/opt/telephony" name="platform_frameworks_opt_telephony" remote="aospify" />

  <!-- Hardware repos -->
  <project path="hardware/custom/interfaces" name="platform_hardware_custom_interfaces" remote="aospify" />

  <!-- Packages repos -->
  <project path="packages/apps/Settings" name="platform_packages_apps_Settings" remote="aospify" />
  <project path="packages/resources/devicesettings" name="platform_packages_resources_devicesettings" remote="aospify" />
  <project path="packages/services/Telephony" name="platform_packages_services_Telephony" remote="aospify" />

  <!-- Vendor repos -->
  <project path="vendor/aosp" name="platform_vendor_aosp" remote="aospify" />

</manifest>
